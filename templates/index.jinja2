{% extends "layout.jinja2" %}
{% block content %}

    <div class="container" style="margin-top:10px;">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search for your item " aria-label="Recipient's username" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-primary">Search</button>
      </div>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Owner</th>
            <th scope="col">Location</th>
            <th scope="col">Description</th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
            <tr>
              <th scope="row">{{ item.id }}</th>
              <td>{{ item.name }}</td>
              <td>{{ item.owner }}</td>
              <td>{{ item.location }}</td>
              <td>{{ item.description }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
{% endblock %}