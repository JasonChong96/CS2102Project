{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Item Categories</h3>
        {% if admin %}
          <form method="post">
            Add a category:
            <input type="text" name="name" required>
            <input type="submit" value="Submit"/>
          </form>
          {% endif %}
        <ul>
        {% for category in categories %}
          <p>
              <a style="color:black;">{{ category[0] }}</a>
              <a class="btn btn-primary" href="{{ url_for('category_module.view_subcategory_page', subcategory=category[0]) }}" role="button">View items</a></p>
        {% endfor %}
        </ul>

     </div>
    </div>
    </div>
{% endblock %}