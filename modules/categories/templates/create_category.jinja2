{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Add category: </h3>
      {% if admin %}
      <form method="post">
        Category name:
        <input type="text" name="name" required>
        <input type="submit" value="Submit"/>
      </form>
      {% else %}
      <div class="alert alert-danger" role="alert">
          You are not authorized to do this.
      </div>
      {% endif %}


  </div></div>
    </div>
{% endblock %}