{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Sign Up</h3>
      {% if error %}
        <div class="alert alert-danger" role="alert">
            We're sorry, an account with your email already exists
        </div>
      {% endif %}
      <p>Sign up for an account with us!</p>
        <form method="post">
            <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" class="form-control" placeholder="bob@example.com" name="email" required>
            </div>
            <div class="form-group">
            <label for="uname">Display Name:</label>
            <input type="text" class="form-control" placeholder="Enter your desired username" name="uname" required>
            </div>
            <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" placeholder="Enter Password" name="password" required>
            </div>
            <div class="form-group">
            <label for="password2">Retype Password:</label>
            <input type="password" class="form-control" placeholder="Enter Password" name="password2" required>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Sign Up!</button>
        </form>
  </div></div>
    </div>
{% endblock %}