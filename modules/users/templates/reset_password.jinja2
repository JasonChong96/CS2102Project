{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">

      <h3>Password Reset</h3>
       {%  if error %}
          <div class="alert alert-danger" role="alert">
          {{ error }}
          </div>
      {% endif %}
        <form method="post">
            {% if not dont_ask_old %}
            <div class="form-group">
            <label for="uname">Old Password:</label>
            <input type="password" class="form-control" placeholder="bob@example.com" name="old_password" required>
            </div>
            {% endif %}
            <div class="form-group">
            <label for="uname">New Password:</label>
            <input type="password" class="form-control" placeholder="bob@example.com" name="new_password" required>
            </div>
            <div class="form-group">
            <label for="uname">Retype New Password:</label>
            <input type="password" class="form-control" placeholder="bob@example.com" name="confirm_password" required>
            </div>
            <button type="submit" class="btn btn-danger pull-right">Reset Password</button>
            <p></p>
        </form>
  </div></div>
    </div>
{% endblock %}
