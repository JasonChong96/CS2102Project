{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Items you can borrow</h3>
      <form method="post">
        <ul>
        {% for item in items %}
          <p><input type="radio" name=item_entry 
          value="{{ item[0] }} {{ item[1] }} {{ item[2] }} {{ item[6] }}"> 
          {{ item[1] }} <br> <a href="{{ url_for('user_module.user_profile', owner=item[2]) }}">{{ item[2] }} </a> <br> Description: {{ item[6] }} </p>
        {% endfor %}
        <input type="submit" value="Bid"/>
        </ul>
      </form>
      
  </div></div>
    </div>
{% endblock %}