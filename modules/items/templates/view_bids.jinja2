{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">

     <table class="table">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Bid</th>
        <th scope="col">Select Bid</th>
    </tr>
  </thead>
  <tbody>
   {% for bid in bids %}
    <tr>
      <td>{{ bid.user }}</td>
      <td>{{ bid.quantity }}</td>
        <td><a href="accept_bid?bidder={{ bid.user }}&item={{ item }}"><button class="btn">Accept Bid</button></a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>
  </div></div>
    </div>
{% endblock %}