{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Item: </h3>
      {{name}} Owner: {{owner}} Description: {{description}}
      <form method="post">
        Bidding points:
        <input id="item_id" name="item_id" type="hidden" value="{{ item_id }}"/>
        <input type="text" name="bid_value" required>
        <input type="submit" value="Submit"/>
      </form>
      
  </div></div>
    </div>
{% endblock %}