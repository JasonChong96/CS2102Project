{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">
      <h3>Loan out an item</h3>
      <form method="post">
            <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" required>
            </div>

            <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" class="form-control" name="location" required>
            </div>

            <div class="form-group">
            <label for="latitude">Latitude:</label>
            <input type="text" class="form-control" name="latitude" required>
            </div>

            <div class="form-group">
            <label for="longitude">Longitude:</label>
            <input type="text" class="form-control" name="longitude" required>
            </div>

            <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" class="form-control" name="description" required>
            </div>

            <div class="form-group">
            <label for="date_start">Starting date:</label>
            <input type="text" class="form-control" name="date_start" required>
            </div>

            <div class="form-group">
            <label for="date_end">Ending date:</label>
            <input type="text" class="form-control" name="date_end" required>
            </div>
            <label for="category_group">Categories:</label>
          <div class="btn-group-toggle" data-toggle="buttons" name="category_group">
          {% for category in categories %}
              <label class="btn btn-secondary">
                <input type="checkbox" autocomplete="off" name={{ category[0] }}> {{ category[0] }}
              </label>
          {% endfor %}
          </div>
            <br>
          <button type="submit" class="btn btn-primary pull-right">Loan out</button>
      </form>

  </div></div>
    </div>
{% endblock %}