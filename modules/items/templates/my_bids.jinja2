{% extends "layout.jinja2" %}
{% block content %}
    <div class="container" style="margin-top:10px;">
    <div class="card">
  <div class="card-body">

     <table class="table">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Bid</th>
        <th scope="col">Status</th>
        <th scope="col">Retract bid</th>
    </tr>
  </thead>
  <tbody>
   {% for bid in bids %}
    <tr>
      <td><a href="/view_item/{{ bid.item_id }}">{{ bid.item_name }}</a></td>
      <td>{{ bid.quantity }}</td>
        <td>
            {% if bid.selected == "unknown" %}
                <button class="btn btn-light">Unknown</button>
            {% endif %}
            {% if bid.selected == "rejected" %}
                <button class="btn btn-danger">Rejected</button>
            {% endif  %}
            {% if bid.selected == "selected" %}
                <button class="btn btn-success">Accepted</button>
            {% endif %}
        </td>
    <td>
       <a href="/delete_bid?item_id={{ bid.item_id }}" class="btn btn-danger">Retract bid</a>
    </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
  </div></div>
    </div>
{% endblock %}